@model IEnumerable<lab29_brian.Models.UserPost>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PostContent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GeoLocation)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Picture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeoLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserPostID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserPostID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserPostID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
